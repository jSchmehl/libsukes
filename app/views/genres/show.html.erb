<h1><%= t('genre.show') %></h1>
<div class="details">
	<%= t('genre.genre') %>: <strong><%= @genre.name %></strong>
	<br/><br/><br/>
	<%=t 'book.books' %>:<br/>
	<ul>
		<% @books.each do |book| %>
				<li><%= link_to book.title, book %></li>
		<% end %>
	</ul>
</div>
<div class="nav_bottom">
	<%= link_to image_tag('icons/vcard_edit.png', :alt => t('common.edit'), :title => t('common.edit')), edit_genre_path(@genre) %>
	<%= link_to image_tag('icons/arrow_undo.png', :alt => t('common.back'), :title => t('common.back')), genres_path %>
</div>