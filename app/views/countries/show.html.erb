<h1><%= t('country.show') %></h1>
<div class="details">
	<%= t('country.country') %>: <strong><%= @country.name %></strong>
	<br/><br/>
	<%= image_tag('flags/'+@country.icon, :alt => @country.tag)+'&nbsp;&nbsp;&nbsp;' unless @country.icon.empty? %><%= @country.tag %>
</div>
<div class="nav_bottom">
	<%= link_to image_tag('icons/vcard_edit.png', :alt => t('common.edit'), :title => t('common.edit')), edit_country_path(@country) %>
	<%= link_to image_tag('icons/arrow_undo.png', :alt => t('common.back'), :title => t('common.back')), countries_path %>
</div>